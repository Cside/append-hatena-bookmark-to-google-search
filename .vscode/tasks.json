{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": [
                "install"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ]
        },
        {
            "taskName": "build",
            "args": [
                "run",
                "watch"
            ]
        },
        {
            "taskName": "lint",
            "args": [
                "run",
                "lint"
            ]
        },
        {
            "taskName": "release",
            "args": [
                "run",
                "release"
            ]
        }
    ]
}