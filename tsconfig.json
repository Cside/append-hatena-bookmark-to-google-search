{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "allowUnreachableCode": false,
        "strictPropertyInitialization": false,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "experimentalDecorators": true,
        "pretty": true
    }
}